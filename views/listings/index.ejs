<% layout("/layouts/boilerplate") %>
<body>
    <h1>All Listings</h1>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <%for(let listing of allListings){%>

            <a href="/listings/<%= listing._id %>" class="listing-link">
                 <div class="card col">
  <img src="<%= listing.image%>" class="card-img-top" alt="listing_image" style="height: 20rem">
  <div class="card-img-overlay"></div>
  <div class="card-body">
    <b><p class="card-text"><%= listing.title %></p></b>
    <br>
&#8377 <%=listing.price.toLocaleString("en-IN")%>/night</p>
  </div>
</div>
            </a>

   
    <%}%>
    </div>

    <ul>

<%for(let listing of allListings){%>
    <li><a href="/listings/<%= listing._id %>"><%= listing.title %></a></li>
    
<%}%>
</ul>
</body>
</html>

